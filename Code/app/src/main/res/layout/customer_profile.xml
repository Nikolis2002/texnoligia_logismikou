<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="356dp"
        android:onClick="chargeWallet"
        android:text="@string/chargeWallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/fields"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/user_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                 />

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/user_name"
                android:lineSpacingExtra="3sp"
                android:text="@string/username2"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pass_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/password"
                android:lineSpacingExtra="3sp"
                android:text="@string/password2"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/name"
                android:lineSpacingExtra="3sp"
                android:text="@string/name"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/surname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/surname"
                android:lineSpacingExtra="3sp"
                android:text="@string/surname"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/email"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/email"
                android:lineSpacingExtra="3sp"
                android:text="@string/mail"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/phone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/phone"
                android:lineSpacingExtra="3sp"
                android:text="@string/phone"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/license"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/license"
                android:lineSpacingExtra="3sp"
                android:text="@string/driversLicense"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/points"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/points"
                android:lineSpacingExtra="3sp"
                android:text="@string/points2"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/wallet"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/wallet"
                android:lineSpacingExtra="3sp"
                android:text="@string/wallet"
                android:textAppearance="@style/label" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:gravity="center_horizontal|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/payment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                app:srcCompat="@drawable/img" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/payment"
                android:lineSpacingExtra="3sp"
                android:text="@string/payment_methods"
                android:textAppearance="@style/label" />


        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button123123123123123123123"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="356dp"
        android:onClick="addCardButton2"
        android:text="@string/addCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>